<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/clubListLayout"
    android:weightSum="786">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:orientation="vertical"
        android:weightSum="140">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/clubIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:background="@drawable/round_background_border_main_theme"
            android:padding="1dp"
            android:src="@drawable/mypage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="16" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="666"
        android:orientation="vertical"
        android:weightSum="140">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="47" />

        <TextView
            android:id="@+id/clubName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="48"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/notosanskr_light"
            android:includeFontPadding="false"
            android:text="동아리 명"
            android:textColor="@color/black_191919" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="47"
            android:orientation="horizontal"
            android:weightSum="592">

        </LinearLayout>

    </LinearLayout>



</LinearLayout>